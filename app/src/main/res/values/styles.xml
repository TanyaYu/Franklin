<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorSecondaryInverse">@color/text_primary_inverse</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:actionBarSize">@dimen/toolbar_size</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/ripple</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="toolbarStyle">@style/Toolbar.AppTheme</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationIcon</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="daySelectorView">@style/DaySelectorView</item>
    </style>

    <style name="DaySelectorView">
        <item name="daysCount">7</item>
        <item name="dateFormat">@string/item_day_format</item>
        <item name="dayViewStyle">@style/DayViewStyle</item>
    </style>

    <style name="DayViewStyle">
        <item name="android:textAppearance">@style/Body</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/day_view_text_color_selector</item>
        <item name="android:background">@drawable/item_day_selector</item>
    </style>
</resources>
