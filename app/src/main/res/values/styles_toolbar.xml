<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="titleTextAppearance">@style/Title</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Toolbar.AppTheme">
        <item name="android:background">?colorPrimary</item>
        <item name="titleTextColor">@color/toolbar_icon</item>
    </style>

    <style name="ToolbarNavigationIcon" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/toolbar_icon</item>
    </style>

    <style name="ActionButtonOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/toolbar_icon</item>
    </style>


</resources>